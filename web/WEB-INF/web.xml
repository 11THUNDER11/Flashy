<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>

    <display-name>progettoINGSW</display-name>
    <description>
      Application Description
    </description>
	
	
    <!-- Define servlets that are included in the application -->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AggiungiCollezioneServlet</servlet-name>
        <servlet-class>servlets.AggiungiCollezioneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaCollezioneServlet</servlet-name>
        <servlet-class>servlets.EliminaCollezioneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AggiungiArgomentoServlet</servlet-name>
        <servlet-class>servlets.AggiungiArgomentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RimuoviArgomentoServlet</servlet-name>
        <servlet-class>servlets.RimuoviArgomentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificaArgomentoServlet</servlet-name>
        <servlet-class>servlets.ModificaArgomentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AggiungiCartaServlet</servlet-name>
        <servlet-class>servlets.AggiungiCartaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RimuoviCartaServlet</servlet-name>
        <servlet-class>servlets.RimuoviCartaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificaFlashCardServlet</servlet-name>
        <servlet-class>servlets.ModificaFlashCardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizServlet</servlet-name>
        <servlet-class>servlets.QuizServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SimulazioneServlet</servlet-name>
        <servlet-class>servlets.SimulazioneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EsercitazioneServlet</servlet-name>
        <servlet-class>servlets.EsercitazioneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AmministrazioneServlet</servlet-name>
        <servlet-class>servlets.AmministrazioneServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AggiungiCollezioneServlet</servlet-name>
        <url-pattern>/nuovaCollezione</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaCollezioneServlet</servlet-name>
        <url-pattern>/eliminaCollezione</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AggiungiArgomentoServlet</servlet-name>
        <url-pattern>/aggiungiArgomento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RimuoviArgomentoServlet</servlet-name>
        <url-pattern>/eliminaArgomento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificaArgomentoServlet</servlet-name>
        <url-pattern>/modificaArgomento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AggiungiCartaServlet</servlet-name>
        <url-pattern>/AggiugiCarta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RimuoviCartaServlet</servlet-name>
        <url-pattern>/eliminaCarta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificaFlashCardServlet</servlet-name>
        <url-pattern>/modificaCarta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/avviaQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimulazioneServlet</servlet-name>
        <url-pattern>/valutaCarta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EsercitazioneServlet</servlet-name>
        <url-pattern>/fineEsercitazione</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AmministrazioneServlet</servlet-name>
        <url-pattern>/AmministrazioneUtenti</url-pattern>
    </servlet-mapping>
    
    
     
    <welcome-file-list>
        <welcome-file>registrazione.jsp</welcome-file>
 	</welcome-file-list> 
    
	<!-- Handle exceptions and errors -->
	
	<error-page>
		<error-code>404</error-code>
		<location>/errors/notfound.html</location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/errors/failure.jsp</location>
	</error-page>
	 
</web-app>